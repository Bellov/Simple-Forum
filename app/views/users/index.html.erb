<p id="notice"><%= notice %></p>

<h4>Users</h4>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Username</th>
    <th>Email</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.username %><br>
          <small><%= pluralize(user.articles.count, "articles") %></small>
        </td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>

        <% if logged_in? and current_user.admin? %>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
            <td><%= link_to "Delete this user",  user_path(user) ,data: {confirm:  "Are you sure to wanna delete this noob?"}%></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br><br>


<div align="center">
  <%= will_paginate %>
</div>

